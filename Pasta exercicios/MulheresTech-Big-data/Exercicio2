# Inicializando as listas para armazenar os números
pares = []
impares = []


contatores_pares = 0
contadores_impares = 0


while contatores_pares < 20 or contadores_impares < 20:
    numero = int(input("Digite um número: "))

    # Verifica se o número é par
    if numero % 2 == 0:
        if contatores_pares < 20:  
            pares.append(numero)
            contatores_pares += 1
    # Verifica se o número é ímpar
    else:
        if contadores_impares < 20:  
            impares.append(numero)
            contadores_impares += 1

# Exibindo os resultados
print("Números pares:", pares)
print("Números ímpares:", impares)

